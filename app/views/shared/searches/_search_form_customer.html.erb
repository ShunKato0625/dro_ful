<div class="col form-inline d-block text-right">
  <%= form_with url: search_customer_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword , placeholder:"ユーザー名（ニックネームで検索" %>
    <%= f.button :type => "submit", class: "btn btn-outline-success" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>