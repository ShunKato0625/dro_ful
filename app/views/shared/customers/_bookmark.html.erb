<div class="row justify-content-center">
　<% favorites.each do |favorite| %>
    <div class = "my-2 mx-1 p-2 table-background text-center" >
      <%= link_to post_path(favorite.post.id) do %>
        <%= image_tag favorite.post.image, size: "250x220" %>
        <div class="row justify-content-around">
          <p class="card-title text-dark pt-2"><%= favorite.post.title %></p>
        </div>
        <div class="row justify-content-around">
          <p class="card-title text-dark pt-2"><%= favorite.post.prefecture.name %></p>
        </div>
        <div class="row justify-content-center">
          <p class="card-title text-dark">オススメ度：<%= render "shared/posts/static_rate", post: favorite.post %></p>
        </div>
        <div class="row justify-content-around">
            <i class="fas fa-eye"></i><%= favorite.post.impressions_count %>
            <i class="fas fa-thumbs-up" aria-hidden="true" style="color: black;"></i><%= favorite.post.favorites.count %>
            <i class="fas fa-comment-alt"></i><%= favorite.post.post_comments.count %>
        </div>
        <div class="row justify-content-around">
            <%= favorite.post.shooting_date %>
            <%= link_to customer_path(favorite.customer.id) do %>
              <%= image_tag favorite.post.customer.get_profile_image(40,40) ,class: "rounded-circle"%>
            <% end %>
            <%= favorite.post.customer.nick_name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>