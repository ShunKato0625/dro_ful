<div class="row">
  <% favorites.each do |favorite| %>
    <div class = "my-2 p-2 post-index-card text-center" >
      <%= link_to post_path(favorite.post.id) do %>
        <%= image_tag favorite.post.image, size: "320x240", class:"col" %>
      <% end %>
        <div class="row justify-content-around">
          <p class="col pt-3"><%= favorite.post.title %></p>
        </div>
        <div class="row justify-content-around">
          <p class="col"><%= favorite.post.prefecture.name %></p>
        </div>
        <div class="row justify-content-center">
          <div class="col">
            <%= render "shared/posts/static_rate", post: favorite.post %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-4">
            <i class="far fa-eye"></i><%= favorite.post.impressions_count %>
          </div>
          <div class="col-4">
            <i class="far fa-thumbs-up"></i><%= favorite.post.favorites.count %>
          </div>
          <div class="col-4">
            <i class="far fa-comment-dots"></i><%= favorite.post.post_comments.count %>
          </div>
        </div>
        <div class="row justify-content-around">
          <div class="col mt-3 ml-2">
            <%= favorite.post.created_at.to_s(:datetime_jp) %>
          </div>
          <div class="col mt-2 mr-2">
            <%= link_to customer_path(favorite.customer.id) do %>
              <%= image_tag favorite.post.customer.get_profile_image(40,40) ,class: "rounded-circle"%>
              <%= favorite.post.customer.nick_name %>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
</div>