<div class="row">
  <div class="col-11">
    <%= form_with model:customer, url: admin_customer_path, method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :プロフィール画像, class: "col-md-3 col-12" %>
        <%= f.file_field :profile_image, class:"form-control-file col-md-6 col-10 offset-1" %>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-12">会員ID</label>
        <label class="col-md-3 col-10 offset-1"><%= customer.id %></label>
      </div>

      <div class="form-group row">
        <%= f.label :nick_name, 'ニックネーム', class: "col-md-3 col-12" %>
        <%= f.text_field :nick_name, autocomplete: "nick_name", class: "form-control col-md-3 col-10 offset-1" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, 'メールアドレス', class: "col-md-3 col-12" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-3 col-10 offset-1" %>
      </div>
      <div class="form-group row">
        <%= f.label :introduction, '自己紹介', class: "col-md-3 col-12" %>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control col-md-6 col-10 offset-1" %>
      </div>
      <div class="form-gropu row">
        <%= f.label :is_deleted, '会員ステータス', class: "col-md-3 col-12" %>
        <div class="custom-control custom-radio col-md-6 col-10 offset-1">
          <%= f.radio_button :is_deleted, false %> <%= f.label :is_active, "有効", class:"mr-3" %>
          <%= f.radio_button :is_deleted, true %> <%= f.label :is_active, "退会" %>
        </div>
      </div>
      <div class="actions mt-5">
        <%= f.submit "変更を保存", class: "btn btn-success col-4 offset-2" %>
    <% end %>
  </div>
</div>