<div class="container">
  <div class="row my-2">
    <h3 class="col-6"><b>登録情報</b></h3>
    <div class"col-6">
      <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-success" %>
    </div>
  </div>

  <div class="row">
    <table class="col-md-7 col-12 table border-bottom table-hover table-background">
      <tbody>
        <tr>
          <th class="col-4 table-active">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="col-4 table-active">ニックネーム</th>
          <td><%= @customer.nick_name %></td>
        </tr>
        <tr>
          <th class="col-4 table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="col-4 table-active">自己紹介</th>
          <td><%= customer.introduction %></td>
        </tr>
        <tr>
          <th class="col-4 table-active">会員ステータス</th>
          <td>
            <% if @customer.active_for_authentication? %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-muted">退会</b>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="offset-md-1 col-md-3 col-9 offset-2 d-flex align-items-center">
      <%= image_tag customer.get_profile_image(200,200), class: "rounded-circle" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-12">
      <h3><b>投稿履歴</b></h3>
    </div>
  </div>
  <%= render 'admin/posts/post_index_admin', posts: posts, customer: customer %>
  <div class="d-flex justify-content-center pt-5">
    <%= paginate posts %>
  </div>
</div>
