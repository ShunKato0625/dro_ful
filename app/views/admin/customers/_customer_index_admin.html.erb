<div class="row mx-5 px-5">
  <table class="table border-bottom table-hover table-background">
    <thead class="thead-light">
      <tr>
        <th style="width: 10%">会員ID</th>
        <th style="width: 10%"><!--ProfileImage--></th>
        <th style="width: 20%">氏名</th>
        <th style="width: 20%">ニックネーム</th>
        <th style="width: 25%">メールアドレス</th>
        <th style="width: 15%">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr onclick='window.location="<%= '/admin/customers/' + customer.id.to_s %>"' role="link">
          <td class="py-4" style="width: 10%">
            <%= customer.id %>
          </td>
          <td class="py-4" style="width: 10%">
            <%= image_tag customer.get_profile_image(40,40), class: "rounded-circle" %>
          </td>
          <td class="py-4" style="width: 20%">
            <%= link_to customer.last_name+customer.first_name, admin_customer_path(customer), class:"text-dark" %>
          </td>
          <td class="py-4" style="width: 20%">
            <%= customer.nick_name %>
          </td>
          <td class="py-4" style="width: 25%">
            <%= customer.email %>
          </td>
          <td class="py-4" style="width: 15%">
            <% if customer.active_for_authentication? %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-muted">退会</b>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center py-3">
  <%= paginate @customers %>
</div>