<div class="container py-5">
  <div class="row pl-5 ml-5 text-center">
    <h3 class="col mb-5 mr-5">管理者ログイン</h3>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group row">
          <%= f.label :メールアドレス, class: "col-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class:"col-8" %>
        </div>

        <div class="field form-group row mb-5">
          <%= f.label :パスワード, class: "col-4" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-8" %>
        </div>

        <div class="actions form-group row">
          <%= f.submit "ログイン", class:"btn btn-primary col-3 offset-4" %>
          <div class="col-6"></div>
        </div>
      <% end %>
    </div>
    <div class="col-3"></div>
  </div>

</div>
<%= render "admin/shared/links" %>