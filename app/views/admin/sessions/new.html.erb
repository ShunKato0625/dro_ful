<div class="container py-5">
  <div class="row">
    <h3 class="col-md-8 offset-md-4 col-10 offset-1 mb-5">管理者ログイン</h3>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3 col-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group row">
          <%= f.label :メールアドレス, class: "col-md-4 col-12" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class:"col-md-8 col-10 offset-1" %>
        </div>

        <div class="field form-group row mb-5">
          <%= f.label :パスワード, class: "col-4" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-md-8 col-10 offset-1" %>
        </div>

        <div class="actions form-group row">
          <%= f.submit "ログイン", class:"btn btn-primary col-md-3 offset-md-4 col-4 offset-1" %>
          <div class="col-md-6"></div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-4"></div>
  </div>

</div>
<%= render "admin/shared/links" %>