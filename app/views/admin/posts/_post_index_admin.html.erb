 <div class="row ">
    <% posts.each do |post| %>
      <div class = "my-2 mx-1 p-2 table-background text-center" >
        <%= link_to admin_post_path(post.id) do %>
          <div class="row">
            <p class="col card-title text-dark">投稿ID：<%= post.id %></p>
          </div>
          <%= image_tag post.image, size: "250x220"%>
          <div class="row justify-content-around">
            <p class="col card-title text-dark pt-3"><%= post.title %></p>
          </div>
          <div class="row justify-content-around">
            <p class="col card-title text-dark"><%= post.prefecture.name %></p>
          </div>
          <div class="row align-item-center">
            <div class="col">
              <%= render "shared/posts/static_rate", post: post %>
            </div>
          </div>
          <div class="row justify-content-around">
              <i class="fas fa-eye"></i><%= post.impressions_count %>
              <i class="fas fa-thumbs-up" aria-hidden="true" style="color: black;"></i><%= post.favorites.count %>
              <i class="fas fa-comment-alt"></i><%= post.post_comments.count %>
          </div>
          <div class="row justify-content-around">
            <div class="col mt-3 ml-2">
              <%= post.shooting_date %>
            </div>
            <div class="col mt-2 mr-2">
              <%= link_to admin_customer_path(post.customer.id) do %>
                <%= image_tag post.customer.get_profile_image(40,40) ,class: "rounded-circle" %>
                <%= post.customer.nick_name %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center py-3">
      <%= paginate posts %>
  </div>