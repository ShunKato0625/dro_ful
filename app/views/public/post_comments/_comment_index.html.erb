      <tr>
        <td><i class="fas fa-comment-alt"></i>：<%= post.post_comments.count %></td>
      </tr>
        <% post.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to customers_path(post_comment.customer) do %>
            <%= image_tag post_comment.customer. get_profile_image(50,50) %>
            <%= post_comment.customer.nick_name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <% if post_comment.customer == current_customer || admin_signed_in? %>
            <%= link_to "Destroy", post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger pull_right", remote: true, data: {confirm: "本当に削除しますか？"}%>
          <% end %>
        
        </td>
      </tr>
        <% end %>