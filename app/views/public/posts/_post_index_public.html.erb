 <div class="row">
    <% posts.each do |post| %>
      <div class = "my-2 p-2 table-background text-center" >
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, size: "250x220" %>
          <div class="row justify-content-around">
            <p class="col card-title text-dark pt-2"><%= post.title %></p>
          </div>
          <div class="row justify-content-around">
            <p class="col card-title text-dark pt-2"><%= post.prefecture.name %></p>
          </div>
          <div class="row align-item-center">
            <div class="col">
              <%= render "shared/posts/static_rate", post: post %>
            </div>
          </div>
          <div class="row justify-content-around">
            <%if customer_signed_in? %>
              <i class="fas fa-eye"></i><%= post.impressions_count %>
                <% if post.customer_id != current_customer.id  %>
                  <div id ="favorite_btn_<%= post.id %>">
                    <%= render 'public/favorites/favorite', post: post %>
                  </div>
                <% else %>
                  <i class="fas fa-thumbs-up" aria-hidden="true" style="color: black;"></i>
                  <%= post.favorites.count %>
                <% end %>
              <i class="fas fa-comment-alt"></i><%= post.post_comments.count %>
            <% end %>
          </div>
          <div class="row justify-content-around">
            <%= post.shooting_date %>
              <% if post.customer.is_deleted == false %>
                <%= link_to customer_path(post.customer.id) do %>
                  <%= image_tag post.customer.get_profile_image(40,40) ,class: "rounded-circle"%>
                  <%= post.customer.nick_name %>
                <% end %>
              <% else %>
                <%= post.customer.nick_name %>
              <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>