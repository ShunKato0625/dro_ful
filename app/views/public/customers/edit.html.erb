<div class="container py-5">
  <div class="row my-5">
    <div class="col-5 text-center">
      <h2 class="heading " data-en="EditProfile">会員情報編集</h2>
    </div>
  </div>

  <div class = "row">
    <div id="error" class="ml-2"><%= render 'layouts/errors', obj: @customer %></div>
  </div>

  <%= form_with model:@customer, url: customer_path(@customer.id), method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label :プロフィール画像, class: "col-3" %>
    <%= f.file_field :profile_image, class:"form-control-file col-4" %>
  </div>

  <div class="form-group row">
    <%= f.label :氏名, class: "col-3" %>
    <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control col-3 mr-3" %>
    <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control col-3" %>
  </div>

  <div class="form-group row">
    <%= f.label :フリガナ, class: "col-3" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control col-3 mr-3" %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control col-3" %>
  </div>

  <div class="form-group row">
    <%= f.label :nick_name, 'ニックネーム', class: "col-3" %>
    <%= f.text_field :nick_name, autocomplete: "nick_name", class: "form-control col-3" %>
  </div>

  <div class="form-group row">
    <%= f.label :email, 'メールアドレス', class: "col-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= f.label :introduction, '自己紹介', class: "col-3" %>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control col-6" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "変更を保存", class: "btn btn-success col-4 offset-2" %>
    <%= link_to '退会する', customer_unsubscribe_path(@customer.id), class: "btn btn-danger col-2 offset-3" %>
  </div>
  <% end %>
</div>