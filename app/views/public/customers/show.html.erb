<div class="row">
  <div class="col-11 offset-1">
    <h3 class="mb-5 mini-title">xxページ</h3>

  <div class="row flex-nowrap">
    <table class="table table-bordered col-7 ml-3 mb-4">
      <tbody>
        <tr>
          <th class="table-active">ニックネーム</th>
          <td><%= @customer.nick_name %></td>
        </tr>
        <tr>
          <th class="table-active">自己紹介</th>
          <td><%= @customer.introduction %></td>
        </tr>
      </tbody>
    </table>
    <div class="col-5">
       <%= image_tag @customer.get_profile_image(200,200), class: "rounded-circle" %>
    </div>
  </div>
    <table class="table table-borderless ml-0 mb-2">
      <tr class="post-index-button">
        <th class="col-2"><h3><b>投稿履歴</b></h3></th>
    </table>

<div class="row">
  <div class = "d-flex align-content-around flex-wrap" >
　  <% @posts.each do |post| %>
      <div class = "m-2 p-2 table-background" >
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, size: "320x240" %>
          <div class="row justify-content-around">
            <p class="card-title text-dark pt-2"><%= post.title %></p>
          </div>
          <div class="row justify-content-around">
            <p class="card-title text-dark pt-2"><%= post.prefecture.name %></p>
          </div>
          <div class="row justify-content-center">
            <p class="card-title text-dark">オススメ度：<%= render "public/posts/static_rate", post: post %></p>
          </div>
          <div class="row justify-content-around">
              <i class="fas fa-eye"></i><%= post.impressions_count %>
              <div id ="favorite_btn_<%= post.id %>">
                <%= render 'public/favorites/favorite', post: post %>
              </div>
              <i class="fas fa-comment-alt"></i><%= post.post_comments.count %>
          </div>
          <div class="row justify-content-around">
              <%= post.shooting_date %>
              <%= link_to post_path(@customer.id) do %>
                <%= image_tag post.customer.get_profile_image(40,40) ,class: "rounded-circle"%>
              <% end %>
              <%= post.customer.nick_name %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>