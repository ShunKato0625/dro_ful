<div class="row pt-5">
  <table class="col-7 table border-bottom table-hover table-background">
    <tbody>
      <tr>
        <th class="col-4 table-active">ニックネーム</th>
        <% if customer.is_deleted == true %>
          <td><%= customer.nick_name %>  (退会したユーザー）</td>
        <% else %>
          <td><%= customer.nick_name %></td>
        <% end %>
      </tr>
      <tr>
        <th class="col-4 table-active">自己紹介</th>
        <td><%= customer.introduction %></td>
      </tr>
    </tbody>
  </table>
  <div class="offset-1 col-3 d-flex align-items-center">
     <%= image_tag customer.get_profile_image(150,150), class: "rounded-circle" %>
  </div>
</div>

<div class="row mt-5">
  <div class="col-11 offset-1">
    <h3>投稿一覧</h3>
  </div>
</div>
<%= render 'public/posts/post_index_public', posts: posts, customer: customer %>