<% if post.favorited_by?(current_customer || admin_signed_in? )%>
  <%= link_to post_favorites_path(post), method: :delete,remote: true  do %>
      <i class="fas fa-thumbs-up" aria-hidden="true" style="color: black;"></i>
      <%= post.favorites.count %>
    <% end %>
<% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true do %>
     <i class="fas fa-thumbs-up" aria-hidden="true"></i>
     <%= post.favorites.count %>
    <% end %>
<% end %>